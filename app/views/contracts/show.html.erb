<section id="contract">
  <h1>Contrato: <%= @contract.id %> </h1>

  <p>
    <strong> Funcionário Responsável: </strong>
    <%= @contract.responsable %>
  </p>
  <p>
    <strong> Prazo: </strong>
    <%= l @contract.deadline, format: :short %>
  </p>
  <p>
    <strong> Cliente: </strong>
    <%= @contract.customer.name %>
  </p>
  <p>
    <strong> Duração: </strong>
    <%= @contract.rental_period %>
  </p>
  <p>
    <strong> Equipamentos: </strong>
    <ul>
      <% @contract.equipment.each do |equipment| %>
        <li><%= equipment.name%></li>
      <% end %>
    </ul>
  </p>
  <p>
    <strong> Valor Total: </strong>
    <%= @contract.amount %>
  </p>
  <p>
    <strong> Endereço de Entrega: </strong>
    <%= @contract.delivery_address %>
  </p>
  <p>
    <strong> Data de Início: </strong>
    <%= l @contract.started_at, format: :long %>
  </p>
</section>
<section>
  <%= link_to 'Emitir Recibo de Entrega', contract_receipts_path(@contract),
       method: :post %>
</section>
