<% if flash[:error] %>
  <span class="error_message"><%= flash[:error] %></span>
<% end %>
<%= simple_form_for @contract do |f| %>
  <%= f.input :responsable, label: 'Responsável' %>
  <%= f.association :customer, label: 'Cliente' %>
  <%= f.input :rental_period, collection: [3, 7, 15, 30], label:'Duração', prompt: 'Selecione' %>
  <%= f.association :equipment, label: 'Equipamentos', as: :check_boxes %>
  <%= f.input :amount, label: 'Valor do Contrato' %>
  <%= f.input :delivery_address, label: 'Endereço de Entrega' %>
  <%= f.input :started_at, label: 'Data de início', as: :date, html5: true %>
  <%= f.submit 'Emitir Contrato' %>
<% end %>
