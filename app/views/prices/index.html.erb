<section>
  <% if @prices.empty?%>
    <h1>Tabela não carregada, tente recarregar a página</h1>
  <% else %>
  <h1>Tabela de Preços</h1>
    <table class="table table-striped">
      <tr>
        <th>Nome do Equipamento:</th>
        <th>Duração:</th>
        <th>Preço total:</th>
      </tr>
      <% @prices.each do |price| %>
        <tr>
          <td> <%= price.equipment.name %></td>
          <td> <%= price.duration %></td>
          <td> <%= price.total_value %></td>
        </tr>
      <% end %>
    </table>
  <% end %>
</section>
